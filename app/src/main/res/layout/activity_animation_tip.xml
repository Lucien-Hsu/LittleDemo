<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80FFFFFF"
    tools:context=".AnimationTip">

    <TextView
        android:id="@+id/tv_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/img_bulb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bulb" />

    <TextView
        android:id="@+id/tv_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip：001"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_bulb"
        app:layout_constraintTop_toTopOf="@+id/img_bulb" />

    <TextView
        android:id="@+id/tv_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip：002"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_bulb"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip1" />

    <TextView
        android:id="@+id/tv_tip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip：003"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_bulb"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip2" />
</androidx.constraintlayout.widget.ConstraintLayout>